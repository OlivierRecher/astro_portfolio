---
import Layout from "../layouts/Layout.astro";
import Ticker from "../components/Ticker.jsx";
---

<Layout title="Portfolio - Olivier Recher">
  <div
    class="relative sm:mt-[10%] mt-[50%] text-[#07042f] dark:text-white dark:opacity-80"
  >
    <h4 class="text-center sm:text-xl text-md font-semibold">
      Hello ! I am <span class="text-[#6200ee] dark:text-[#bb86FC]"
        >Olivier</span
      >,
    </h4>
    <h1 class="text-center text-6xl sm:text-9xl font-bold">Full-stack</h1>
    <h1
      class="text-center text-6xl sm:text-9xl font-bold text-[#6200ee] dark:text-[#bb86FC]"
    >
      Developper
    </h1>
    <Ticker client:only />

    <div class="flex flex-row justify-center space-x-10">
      <a href="https://github.com/OlivierRecher" target="_blank">
        <button
          class="relative inline-flex items-center justify-center p-0.5 mb-2 overflow-hidden text-sm font-medium text-gray-900 rounded-full group bg-gradient-to-br from-[#bb86FC] to-blue-500 group-hover:from-[#bb86FC] group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-1 focus:outline-none focus:ring-[#bb86FC] dark:focus:ring-[#bb86FC]"
        >
          <span
            class="relative px-3 py-3 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-full group-hover:bg-opacity-0"
          >
            <svg
              class="w-6 h-6"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z"
                clip-rule="evenodd"></path>
            </svg>
          </span>
        </button>
      </a>
      <a href="https://www.linkedin.com/in/olivier-recher" target="_blank">
        <button
          class="relative inline-flex items-center justify-center p-0.5 mb-2 overflow-hidden text-sm font-medium text-gray-900 rounded-full group bg-gradient-to-br from-[#bb86FC] to-blue-500 group-hover:from-[#bb86FC] group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-1 focus:outline-none focus:ring-[#bb86FC] dark:focus:ring-[#bb86FC]"
        >
          <span
            class="relative px-3 py-3 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-full group-hover:bg-opacity-0"
          >
            <svg
              class="w-6 h-6"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 15 15"
            >
              <path
                fill-rule="evenodd"
                d="M7.979 5v1.586a3.5 3.5 0 0 1 3.082-1.574C14.3 5.012 15 7.03 15 9.655V15h-3v-4.738c0-1.13-.229-2.584-1.995-2.584-1.713 0-2.005 1.23-2.005 2.5V15H5.009V5h2.97ZM3 2.487a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"
                clip-rule="evenodd"></path>
              <path d="M3 5.012H0V15h3V5.012Z"></path>
            </svg>
          </span>
        </button>
      </a>
    </div>

    <div class="flex flex-row justify-center space-x-10 mt-10">
      <a
        href="https://oliviers-amazing-site-734241.webflow.io/"
        class="bg-[#bb86FC] hover:bg-[#6200ee] text-white font-bold py-2 px-6 rounded-xl"
      >
        <button>
          <span class="text-sm">Show more</span>
        </button>
      </a>
    </div>
  </div>
</Layout>

